{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Markdown Viewer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.seitbekir.weak-markdown",
      "shortDescription": "Very simple, weak Markdown viewer",
      "category": "Utility",
      "icon": [
        "icons/32x32.png",
        "icons/64x64.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/256x256@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.svg",
        "icons/scalable.svg"
      ],
      "deb": {
        "desktopTemplate": "./assets/template.desktop"
      }
    },
    "security": {
      "csp": null
    }
  }
}
